<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <Button
        android:id="@+id/buyButton"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/generatorLevelTextView"
        android:layout_marginStart="11dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/generatorNameTextView"
        android:layout_width="141dp"
        android:layout_height="49dp"
        android:layout_below="@+id/generatorProgressBar"
        android:layout_toEndOf="@+id/buyButton"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/generatorLevelTextView"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_below="@+id/generatorProgressBar"
        android:layout_toEndOf="@+id/generatorNameTextView"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/generatorImageView"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/generatorLevelTextView"
        app:srcCompat="@android:color/holo_orange_light" />

    <ProgressBar
        android:id="@+id/generatorProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buyButton"
        android:layout_marginTop="11dp" />

</RelativeLayout>